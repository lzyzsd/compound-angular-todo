// put your stylus code here
$color = white

body
  background: $color

ul,
ul li 
  list-style-type none
  margin 0
  padding 0 0 10px 0 
  overflow hidden

  .btn
    margin-left 2px

  .done
    color #aaa
    text-decoration line-through
    font-style italic
  
ul li
  position relative

  .actions 
    -webkit-transition all 200ms linear
    -moz-transition all 200ms linear
    transition all 200ms linear
    float right
    opacity 0.5
    &:hover
      opacity 1

  &.edit
    .actions
      opacity 1